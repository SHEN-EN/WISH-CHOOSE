/* pages/history.wxss */

/* 
  日记列表
*/
.header_choose{
    width: 100%;
    height: 100rpx;
    background-color: #f2f2f2;
}
.diary_list{
    width: 100%;
    height: auto;
    min-height: 1105rpx;
    background-color: #fff;
}
/* 
  日历插件
*/
#date{
    background:#fff;
    height: 571rpx;
    width:90%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    border-radius: 35rpx;
    z-index: 999;
    /* display: none; */
}
.day{
    width: 14%;
    display:inline-block;
    text-align: center;
    line-height: 65rpx
}
.year_month{
    font-size: 37rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 1rpx solid #e5e5e5;
}
.cancel{
    float: left;
    margin-left: 30rpx;
    color: #989898;
    font-size: 34rpx;
}
.finish{
    float: right;
    margin-right: 30rpx;
    color: #35a7ff;
    font-size: 34rpx;
}
.to_left{
    width: 0;
    height: 0;
    position: absolute;
    top: 20rpx;
    left: 175rpx;
    border-right: 18rpx solid #333333;
    border-top: 18rpx solid transparent;
    border-bottom: 18rpx solid transparent;
}
.to_left_translate{
    width: 0;
    height: 0;
    position: absolute;
    top: 20rpx;
    left: 177rpx;
    border-right: 18rpx solid #fff;
    border-top: 18rpx solid transparent;
    border-bottom: 18rpx solid transparent;
}
.to_right{
    width: 0;
    height: 0;
    position: absolute;
    top: 20rpx;
    right: 177rpx;
    border-left: 18rpx solid #333;
    border-top: 18rpx solid transparent;
    border-bottom: 18rpx solid transparent;
}
.to_right_translate{
    width: 0;
    height: 0;
    position: absolute;
    top: 20rpx;
    right: 179rpx;
    border-left: 18rpx solid #fff;
    border-top: 18rpx solid transparent;
    border-bottom: 18rpx solid transparent;
}
.choose_head{
    height: 82rpx;
    background: #f2f2f2;
}
.choose_head view{
    width: 23%;
    display: inline-block;
    border:  #d8d8d8 solid 1rpx;
    margin-left: 2%;
    border-radius: 20rpx;
    text-align: center;
    margin-top: 3%;
    color: #656565;
}
.choose_head :last-child{
    border: none;
}
.choose_content_dateContent{
    margin-top: 30rpx;
}
.choose_content_dateContent .choose_content_date{
    width: 15%;
    height: 200rpx;
    float: left;
    text-align: center;
    line-height: 6;
    font-size: 33rpx;
    color: #282828;

}
.choose_content_dateContent .choose_content_details{
    height: 200rpx;
    background: #fff;
    box-shadow:0px 0px 13rpx #e4e5e4;
    width: 80%;
    float: left;
    position: relative;
}
.choose_content_dateContent .choose_content_details text{
    font-size: 20rpx;
    color: #989898;
    line-height: 38rpx;
    width: 75%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    overflow: hidden;
    margin: -15rpx 0 0 15rpx;
    box-sizing: border-box;
    float: left;
}
.choose_content_dateContent .choose_content_details .choose_content_details_wenzi{
    width: 18%;
    height: 147rpx;
    float: left;
    margin: 20rpx 0 0 10rpx;
    position: absolute;
    left: 77%;
}
.choose_content_dateContent .choose_content_details .choose_content_details_tuxiang{
    width: 13%;
    height: 115rpx;
    margin: 20rpx 0 0 27rpx;
    position: absolute;
    top: 19rpx;
    left: 77%;
}
.choose_content{
    height: 209rpx;
}
