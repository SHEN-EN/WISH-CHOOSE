/* pages/home/home.wxss */

page {
  background: #fff;
}

.card-swiper swiper-item .swiper-item {
  height: 80%;
}

.card-swiper swiper-item {
  width: 640rpx !important;
  left: 56rpx;
  top: 58rpx;
}

.card-swiper {
  height: 410rpx !important;
  margin-top: -65rpx;
}

.tower-swiper .tower-item {
  transform: scale(calc(0.5 + var(--index) / 10));
  margin-left: calc(var(--left) * 100rpx - 150rpx);
  z-index: var(--index);
}

/* 
OH卡 - 系列
 */

.home_series {
  /* background: red; */
  width: 100%;
  height: 500rpx;
}

.home_seriesNav {
  height: 70rpx;
  display: flex;
  flex-direction: row;
}

.home_series_icon {
  width: 8rpx;
  height: 45rpx;
  margin: 10rpx 0 0 25rpx;
  background: yellow;
}

.home_series_name {
  margin: 6rpx 0 0 20rpx;
  font-size: 18px;
  font-weight: bold;
}

.home_series_all {
  margin: 10rpx 0 0 55%;
  font-size: 14px;
}

.home_seriesContent {
  width: 100%;
  height: 520rpx;
  position: relative;
}

.home_seriesContent_img {
  width: 136rpx;
  height: 116rpx;
  float: left;
  margin: 40rpx 25rpx 75rpx 26rpx;
  -webkit-box-reflect: below 0rpx -webkit-linear-gradient(bottom, rgba(255, 255, 255, 0.3) 0%, transparent 40%, transparent 100%);
}

.home_seriesContent_nameTop {
  position: absolute;
  top: 40%;
}

.home_seriesContent_nameTop text {
  margin: 0 50rpx;
}

.home_seriesContent_nameBtm {
  position: absolute;
  top: 80%;
  margin: 10rpx;
}

.home_seriesContent_nameBtm text {
  margin: 0 30rpx;
}

.home_hotProp {
  height: 200rpx;
  /* background: red; */
}

.home_hotPropNav {
  height: 70rpx;
  display: flex;
  flex-direction: row;
}

.home_hotProp_icon {
  width: 8rpx;
  height: 45rpx;
  margin: 10rpx 0 0 25rpx;
  background: yellow;
}

.home_hotProp_name {
  margin: 6rpx 0 0 20rpx;
  font-size: 18px;
  font-weight: bold;
}
