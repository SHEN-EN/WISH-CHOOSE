/* pages/my.wxss */

page {
  height: 100%;
}

.my {
  height: 100%;
}

.my_header {
  height: 200rpx;
  background: #fff;
  width: 100%;
}

.my_header_img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 100rpx;
  float: left;
}

.my_header_top {
  padding-top: 38rpx;
  padding-left: 45rpx;
}

.my_header_nickName {
  float: left;
  font-size: 34rpx;
  margin-left: 20rpx;
  margin-top: 18rpx;
  color: #000;
}

.my_header_text {
  float: left;
  margin-left: 20rpx;
  font-size: 22rpx;
  width: 60%;
}

.my_body {
  background: #fff;
  margin-top: 30rpx;
  width: 100%;
  height: 80%;
}

.my_body .my_body_list {
  height: 100rpx;
  position: relative;
  padding-top: 30rpx;
}

.my_body .my_body_list::after {
  content: "";
  position: absolute;
  height: 1rpx;
  background: #ede8e8;
  width: 90%;
  left: 5%;
  top: 100rpx;
}

.my_body .my_body_list .my_body_img {
  width: 35rpx;
  height: 35rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.my_body .my_body_list .my_body_gt {
  width: 20rpx;
  height: 20rpx;
  float: right;
  margin-right: 35rpx;
  margin-top: 13rpx;
}

.my_body .my_body_list .my_body_text {
  font-size: 26rpx;
  position: relative;
  top: -5rpx;
}
