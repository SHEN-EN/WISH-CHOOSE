<!-- pages/my.wxml -->
<my-component my-property="{{title}}"></my-component>
<view class="my">
  <view class="my_header">
    <view class="my_header_top">
      <image src="{{headerImg}}" class="my_header_img"></image>
      <text class="my_header_nickName">你好,{{nickName}}</text>
      <text class="my_header_text">您已连续觉察7天（今日还未觉察）</text>
    </view>
  </view>
  <view class="my_body">
    <view>
      <view class="my_body_list" bindtap="awarenessdiary">
        <image class="my_body_img" src="https://shen-1259805780.cos.ap-chengdu.myqcloud.com/page_image/my/book.png" lazy-load="false" />
        <text class="my_body_text">我的觉察</text>
        <image class="my_body_gt" src="https://shen-1259805780.cos.ap-chengdu.myqcloud.com/page_image/my/%26gt.png" lazy-load="false" />
      </view>
      <view class="my_body_list">
        <image class="my_body_img" src="https://shen-1259805780.cos.ap-chengdu.myqcloud.com/page_image/my/tool.png" lazy-load="false" />
        <text class="my_body_text">已有工具</text>
        <image class="my_body_gt" src="https://shen-1259805780.cos.ap-chengdu.myqcloud.com/page_image/my/%26gt.png" lazy-load="false" />
      </view>
      <view class="my_body_list">
        <image class="my_body_img" src="https://shen-1259805780.cos.ap-chengdu.myqcloud.com/page_image/my/setting.png" lazy-load="false" />
        <text class="my_body_text">设置</text>
        <image class="my_body_gt" src="https://shen-1259805780.cos.ap-chengdu.myqcloud.com/page_image/my/%26gt.png" lazy-load="false" />
      </view>
    </view>
  </view>
  <foot id="foot" state="{{home}}"></foot>
</view>